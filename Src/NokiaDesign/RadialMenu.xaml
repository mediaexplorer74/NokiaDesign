<UserControl
    x:Class="NokiaDesign.RadialMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NokiaDesign"
    Width="300" Height="300">
    <Canvas x:Name="RootCanvas" Width="300" Height="300">
        <Ellipse Width="300" Height="300" Fill="#1A1A40" Opacity="0.7"/>
        <!-- Animated center button -->
        <Button x:Name="CenterButton" Width="80" Height="80" 
                Content="&#xE700;" FontFamily="Segoe MDL2 Assets" FontSize="36" Background="#2D9CDB" Foreground="White" 
                Click="CenterButton_Click" Canvas.Left="110" Canvas.Top="110"/>
        <!-- Radial buttons -->
        <Button x:Name="BtnInfo" Width="60" Height="60" 
                Content="&#xE80F;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource RadialMenuButtonStyle}" Click="Info_Click"/>
        <Button x:Name="BtnResearch" Width="60" Height="60" 
                Content="&#xE8D2;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource RadialMenuButtonStyle}" Click="Research_Click"/>
        <Button x:Name="BtnNetwork" Width="60" Height="60" 
                Content="&#xE779;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource RadialMenuButtonStyle}" Click="Network_Click"/>
        <Button x:Name="BtnChronology" Width="60" Height="60" 
                Content="&#xE823;" FontFamily="Segoe MDL2 Assets" Style="{StaticResource RadialMenuButtonStyle}" Click="Chronology_Click"/>
    </Canvas>
</UserControl>
