<Page
    x:Class="NokiaDesign.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NokiaDesign"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Futuristic Menu Placeholder -->
        <SplitView x:Name="FuturisticMenu" DisplayMode="CompactInline" IsPaneOpen="True" OpenPaneLength="200" CompactPaneLength="56">
            <SplitView.Pane>
                <StackPanel>
                    <Button Content="&#xE80F; Information" Click="Information_Click"/>
                    <Button Content="&#xE8D2; Research" Click="Research_Click"/>
                    <Button Content="&#xE779; Network" Click="Network_Click"/>
                    <Button Content="&#xE823; Chronology" Click="Chronology_Click"/>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:Name="ContentFrame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
