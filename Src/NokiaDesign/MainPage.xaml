<Page
    x:Class="NokiaDesign.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NokiaDesign"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!-- Futuristic Menu -->
        <!--local:RadialMenu x:Name="RadialMenuControl" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Frame x:Name="ContentFrame" Margin="0,350,0,0"/-->

        <!-- Hamburger Menu -->
        <SplitView x:Name="FuturisticMenu" DisplayMode="CompactInline" IsPaneOpen="True" OpenPaneLength="200" CompactPaneLength="56">
            <SplitView.Pane>
                <StackPanel>
                    <Button Content="Information" Click="Information_Click"/>
                    <Button Content="Projects" Click="Projects_Click"/>
                    <Button Content="Research" Click="Research_Click"/>
                    <Button Content="Network" Click="Network_Click"/>
                    <Button Content="Chronology" Click="Chronology_Click"/>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <Frame x:Name="ContentFrame"/>
            </SplitView.Content>
        </SplitView>
    </Grid>
</Page>
